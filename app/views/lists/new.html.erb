<h1>Create a New Task List</h1>

<%= form_with model: @list, local: true do |form| %>
  <% if @list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Description" %>  <!-- Adicionando a label para descrição -->
    <%= form.text_area :description, placeholder: "Optional description for your list" %>  <!-- Adicionando o campo de descrição -->
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', lists_path %>
